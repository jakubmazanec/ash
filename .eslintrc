{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",

  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },

  // To give you an idea how to override rule options:
  "rules": {
    "strict": [2, "never"],
    "no-unused-vars": [2, {"vars": "local", "args": "after-used"}],
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],

    "no-trailing-spaces": [0]
  }
}
